#!/bin/sh

# Unpacks an archive
# $1 = string filename

if [ -f $1 ] ; then
   case $1 in
      *.7z)        7z x $1         ;;
      *.bz2)       bunzip2 $1      ;;
      *.gz)        gunzip $1       ;;
      *.rar)       unrar x $1      ;;
      *.tar.bz2)   tar xvjf $1     ;;
      *.tar.gz)    tar xvzf $1     ;;
      *.tar)       tar xvf $1      ;;
      *.tbz2)      tar xvjf $1     ;;
      *.tgz)       tar xvzf $1     ;;
      *.zip)       unzip $1        ;;
      *)           echo "'$1' cannot be unpacked" ;;
   esac
else
   echo "'$1' is not a valid file!"
fi

